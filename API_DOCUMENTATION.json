      "updateEventHotness": {
        "path": "/api/v1/events/{id}/hotness",
        "method": "PUT",
        "description": "更新事件热度",
        "authentication": true,
        "permission": "system",
        "parameters": {
          "path": {
            "id": {
              "type": "integer",
              "required": true,
              "description": "事件ID"
            }
          }
        },
        "requestBody": {
          "required": true,
          "schema": {
            "hotness_score": {
              "type": "number",
              "required": false,
              "minimum": 0,
              "maximum": 10,
              "description": "热度分值（0-10）"
            },
            "auto_calculate": {
              "type": "boolean",
              "required": false,
              "default": true,
              "description": "是否自动计算热度（基于浏览量、评论数、时间等因素）"
            },
            "factors": {
              "type": "object",
              "required": false,
              "properties": {
                "view_weight": {
                  "type": "number",
                  "default": 0.4,
                  "description": "浏览量权重"
